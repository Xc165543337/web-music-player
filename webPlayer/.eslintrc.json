{
  "root": true,
  "ignorePatterns": [
    "dist",
    "tailwind.config.js",
    "postcss.config.js",
    "vercel.json"
  ],
  "extends": ["conventions", "plugin:react-hooks/recommended", "prettier"],
  "plugins": ["react-refresh", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
